
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>

<body>

  <!-- Profile -->
  <div class="profile">
    <div class="container">
         <div class="btn-group mb-4" role="group">
            <a href="/profile/user/{{profile.user._id}}" class="btn btn-light">
              <i class="fas fa-user-circle text-info mr-1"></i> Edit Profile</a>         
          </div>
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-6">

            </div>
            <div class="col-6">

            </div>
          </div>

          <!-- Profile Header -->
          <div class="row">
            <div class="col-md-12">
              <div class="card card-body bg-info text-white mb-3">
                <div class="row">
                  <div class="col-4 col-md-3 m-auto">
                    <img class="rounded-circle" src="{{profile.user.avatarUrl}}" alt="" style="width:100%" />
                  </div>

                </div>
                <div class="text-center">

                  <h1 class="display-4 text-center">{{profile.user.username}}</h1>
                  {{!-- <p class="lead text-center">Developer at Microsoft</p> --}}
                  <p> {{profile.location}}</p>
                  <p>
                    <a class="text-white p-2" href="https://medium.com/@rpastor/tutorial-raspberry-pi-retropie-parte-iii-las-roms-4ffbeef8289f">
                      <i class="fas fa-globe fa-2x"></i>
                    </a>

                    <a class="text-white p-2" href="{{profile.social.twitter}}">
                      <i class="fab fa-twitter fa-2x"></i>
                    </a>
                    <a class="text-white p-2" href="{{profile.social.facebook}}">
                      <i class="fab fa-facebook fa-2x"></i>
                    </a>
                    <a class="text-white p-2" href={{profile.social.linkedin}}>
                      <i class="fab fa-linkedin fa-2x"></i>
                    </a>
                      <a class="text-white p-2" href={{profile.social.youtube}}>
                      <i class="fab fa-youtube fa-2x"></i>
                    </a>
                    <a class="text-white p-2" href={{profile.social.instagram}}>
                      <i class="fab fa-instagram fa-2x"></i>
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Profile About -->
          <div class="row">
            <div class="col-md-12">
              <div class="card card-body bg-light mb-3">
                <h3 class="text-center text-info">{{profile.user.username}}'s Bio</h3>
                <br>
                <p class="lead">{{profile.bio}}
                </p>
                <hr />
                <h3 class="text-center text-info">Skill Set</h3>
                <div class="row">

                  {{#each profile.skills}}
                  <div class="d-flex flex-wrap justify-content-center align-items-center">
                    <div class="p-3">
                      <i class="fa fa-check"></i> {{this}}</div>
                  </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>


          <!-- Profile Github -->

          <div ref="myRef">
            <hr />
            <h3 class="mb-4">Latest Github Repos (Pending, We need the github api)</h3>
            <div key={repo.id} class="card card-body mb-2">
              <div class="row">
                <div class="col-md-6">
                  <h4>
                    <Link to={repo.html_url} class="text-info" target="_blank"> Repository One
                    </Link>
                  </h4>
                  <p>Repository description</p>
                </div>
                <div class="col-md-6">
                  <span class="badge badge-info mr-1">
                    Stars: 44
                  </span>
                  <span class="badge badge-secondary mr-1">
                    Watchers: 21
                  </span>
                  <span class="badge badge-success">
                    Forks: 122
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>



  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
 
</body>

</html>