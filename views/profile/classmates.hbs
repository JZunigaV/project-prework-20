<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>

<!-- Profiles -->
<div class="profiles">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="display-4 text-center">Ironhack Part-Time: Class of 2018</h1>
        <p class="lead text-center">Browse and connect with classmates</p>

        {{#each profiles}}
        <!-- Profile Item -->
        <div class="card card-body bg-light mb-3">
          <div class="row">
            <div class="col-2">
              {{#if this.user.avatarUrl}}
              <img id="img-classmates" class="rounded-circle" src="{{this.user.avatarUrl}}" alt="profile picture" />
              {{else}}
              <img id="img-classmates" class="rounded-circle" src="../../images/placeholder2.png" alt="profile picture" />
              {{/if}}
            </div>
            <div class="col-lg-6 col-md-4 col-8">
              <h3>{{this.user.username}}</h3>
              <p>{{this.location}}</p>
              <a href="/profile/user/classmate/{{this.user._id}}" class="btn btn-info">View Profile</a>
            </div>
            <div class="col-md-4 d-none d-lg-block">
              <h4>Skill Set</h4>
              {{#each this.skills}}
              <ul class="list-group">
                <li class="list-group-item">
                  <i class="fa fa-check pr-1"></i>{{this}}</li>
              </ul>
              {{/each}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
  crossorigin="anonymous"></script>

</body>

</html>